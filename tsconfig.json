{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "types/*": [
                "./types/*"
            ]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        // "jsx": "react",
        "jsx": "react-native",
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "lib": [
            "dom",
            "es2019.array"
        ]
    },
    "include": [
        "src/**/*",
        "webpack.config.js",
        "babel.config.js"
    ],
    "exclude": [
        "node_modules/**/*",
        "staticfiles/**/*",
        "frontend/dist/**/*"
    ],
    "extends": "expo/tsconfig.base"
}